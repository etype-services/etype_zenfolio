/**
 * @param $variables
 */
function etype_zenfolio_preprocess_html(&$variables)
{
  drupal_add_css(
    drupal_get_path('module', 'etype_zenfolio') . '/etype_zenfolio.css',
    array(
      'type' => 'file',
      'group' => CSS_DEFAULT
    )
  );
  drupal_add_js(
    drupal_get_path('module', 'etype_zenfolio') . '/etype_zenfolio.js',
    array(
      'scope' => 'footer',
    )
  );
}

/**
 * @param $vars
 */
function etype_zenfolio_preprocess_field(&$vars)
{
  $markup = '';
  if($vars['element']['#field_name'] == 'field_zenfolio_photoset_id')
  {
    $zenfolio_photoset_id = $vars['items'][0]['#markup'];
    $pictures = _etype_zenfolio_fetch($zenfolio_photoset_id);
    if (count($pictures) > 0)
    {
      try {
        $markup = _etype_format_slideshow($pictures);
      } catch (Exception $e) {
        echo "{$e->getMessage()} (Error Code: {$e->getCode()})";
      }
    }
    $vars['items'][0]['#markup'] = $markup;
  }
  return;
}

/**
 * @param $pictures
 * @param $size
 *
 * @return string
 * @throws \Twig_Error_Loader
 * @throws \Twig_Error_Runtime
 * @throws \Twig_Error_Syntax
 */
function _etype_format_slideshow($pictures, $size = 4)
{
  // dpm($pictures);
  $items = [];
  foreach ($pictures as $item)
  {
    $items[]['img_src'] = phpZenfolio\Client::imageUrl($item, $size);
    $items[]['caption'] = 'caption';
  }

  $template_path = drupal_get_path('module', 'etype_zenfolio') ;
  $loader = new Twig_Loader_Filesystem($template_path . '/templates');
  $twig = new Twig_Environment($loader, array(
    'cache' => false,
  ));
  $template = $twig->load('slides.html.twig');
  $content = $template->render([
    'items' => $items,
  ]);

  return $content;
}

/**
 * @param $photoset_id
 *
 * @return array
 */
function _etype_zenfolio_fetch($photoset_id)
{
  $pictures = [];

  if (!empty($photoset_id))
  {
    $appname = 'eType Services/1.0 (www.etypeservices.com)';
    $username = variable_get('etype_zenfolio_username');
    $password = variable_get('etype_zenfolio_password');

    try {
      $client = new phpZenfolio\Client($appname);
      $client->login($username, $password);
    } catch (Exception $e) {
      echo "{$e->getMessage()} (Error Code: {$e->getCode()})";
    }

    try {
      // $pictures = $client->GetRecentPhotos(0, 10);
      $pictures = $client->LoadPhotoSetPhotos($photoset_id, 0, 50);
      // $pictures = $client->LoadGroupHierarchy($username);
      // array_walk($pictures, '_etype_display_imgs');
      // print_r($pictures);
    } catch (Exception $e) {
      echo "{$e->getMessage()} (Error Code: {$e->getCode()})";
    }
  }

  return ($pictures);

}

/**
 * @param $item
 */
function _etype_display_imgs(&$item)
{
  $item = $item->Title . '<a href="' . $item->PageUrl . '"><img src="' . phpZenfolio\Client::imageUrl($item, 1) . '" title="' . $item->Title . '" alt="' . $item->Id . '" /></a>';
}