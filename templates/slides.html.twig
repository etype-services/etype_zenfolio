<style type="text/css">
    @-webkit-keyframes fade {
        from {opacity: .4}
        to {opacity: 1}
    }

    @keyframes fade {
        from {opacity: .4}
        to {opacity: 1}
    }
</style>
<!-- Slideshow container -->
<div class="zenfolio-slideshow-container">
{% block slides %}
    <!-- Full-width images with number and caption text -->
    {% for item in items %}
        <div class="zenfolio-slide zenfolio-fade">
            <div class="zenfolio-numbertext"><span>1</span> / {{ total }}</div>
            <a href="{{ photoset_url }}" target="_blank"><img src="{{ item.img_src }}" alt="{{ item.caption }}" /></a>
            <div class="zenfolio-text">{{ item.caption }}</div>
        </div>
    {% endfor %}
{% endblock %}
    <!-- Next and previous buttons -->
    <a class="zenfolio-prev">&#10094;</a>
    <a class="zenfolio-next">&#10095;</a>
</div>