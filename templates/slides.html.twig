{% extends "base.html.twig" %}
{% block slides %}
    {% for item in items %}
        <!-- Full-width images with number and caption text -->
        <div class="zenfolio-slides zenfolio-fade">
            <div class="zenfolio-numbertext">1 / 3</div>
            <img src="{{ item.img_src }}" style="width:100%">
            <div class="zenfolio-text">{{ item.caption }}</div>
        </div>
    {% endfor %}
{% endblock %}