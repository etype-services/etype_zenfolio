<style type="text/css">
    @-webkit-keyframes fade {
        from {opacity: .4}
        to {opacity: 1}
    }

    @keyframes fade {
        from {opacity: .4}
        to {opacity: 1}
    }
</style>
<!-- Slideshow container -->
<div class="zenfolio-slideshow-container">
{% block slides %}{% endblock %}
    <!-- Next and previous buttons -->
    <a class="zenfolio-prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="zenfolio-next" onclick="plusSlides(1)">&#10095;</a>
</div>
<br />

<!-- The dots/circles -->
<div style="text-align:center">
    <span class="zenfolio-dot" onclick="currentSlide(1)"></span>
    <span class="zenfolio-dot" onclick="currentSlide(2)"></span>
    <span class="zenfolio-dot" onclick="currentSlide(3)"></span>
</div>